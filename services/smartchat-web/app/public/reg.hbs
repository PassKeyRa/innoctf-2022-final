<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>SmartChat {{page-title}}</title>
    <link rel="stylesheet" href="css/reg.css">
    <link href="https://fonts.googleapis.com/css?family=Mulish:200,300,regular,500,600,700,800,900,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <main>
            <div class="registaton_container">
                <h1 class="main_text">SmartChat</h1>
                <div class="reg_name">
                    <label for="">Registration</label>
                </div>
                <form id="register">
                    <div class="group">
                        <div class="name">
                            <input value="" id="username" name="username" type="text" placeholder="Enter username" class="">
                        </div>
                    </div>
                    <div class="group">
                    <div class="password1">
                        <input value="" id="password1" name="password1" type="password" placeholder="Come up with a password" class="">
                    </div>
                    </div>    
                    <div class="group">
                    <div class="password2">
                        <input value="" id="password2" name="password2" type="password" placeholder="Repeat the password" class="">
                    </div>
                    </div>
                </form>
                <div style="text-align: center; justify-content: center;">
                    <button id="reg_btn" class="button" style="height: 50px; width:200px; font-size: 30px; text-align:center; justify-content: center; font-family: Mulish, sans-serif;">
                        Registration
                    </button>
                </div>
            </div>
            
        </main>
    </div>
    <script src="js/register.js"></script>
    <script>
        function myFunction(KeyframeEffect) {
        var x = document.getElementById("myInput1");
        if (x.type === "password") {
        x.type = "text";
        } else {
        x.type = "password";
        }
        }
        function myFunction(KeyframeEffect) {
        var x = document.getElementById("myInput2");
        if (x.type === "password") {
        x.type = "text";
        } else {
        x.type = "password";
        }
        }    
    </script>
</body>
</html>
